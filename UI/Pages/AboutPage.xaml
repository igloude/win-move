<Page
    x:Class="WinMove.UI.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Padding="24" Spacing="12" MaxWidth="500" HorizontalAlignment="Left">
        <TextBlock Text="win-move" Style="{StaticResource TitleTextBlockStyle}" />
        <TextBlock Text="v1.0" Style="{StaticResource SubtitleTextBlockStyle}"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        <TextBlock TextWrapping="Wrap" Margin="0,8,0,0"
                   Text="Window management utility. All actions target the window under the mouse cursor." />
        <TextBlock TextWrapping="Wrap" Margin="0,4,0,0"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                   Text="Hold modifier keys and press action keys to move, resize, snap, or adjust window opacity." />
    </StackPanel>
</Page>
