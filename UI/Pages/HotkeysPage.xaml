<Page
    x:Class="WinMove.UI.Pages.HotkeysPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Hotkey Bindings" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,12" />

        <ListView x:Name="HotkeyList" Grid.Row="1"
                  SelectionMode="None" IsItemClickEnabled="False">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Padding" Value="0,4" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnSpacing="12" Padding="4,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding FriendlyName}" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding ShortcutDisplay}" Grid.Column="1"
                                   VerticalAlignment="Center" FontFamily="Consolas"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <Button Content="Change" Grid.Column="2" Click="OnChangeClick" Tag="{Binding}" />
                        <Button Content="Clear" Grid.Column="3" Click="OnClearClick" Tag="{Binding}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right"
                    Spacing="8" Padding="0,12,0,0">
            <Button Content="Reset to Defaults" Click="OnResetDefaults" />
            <Button Content="Save" Style="{StaticResource AccentButtonStyle}" Click="OnSave" />
        </StackPanel>
    </Grid>
</Page>
