<Page
    x:Class="WinMove.UI.Pages.HotkeysPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinMove.UI.Pages">
    <Page.Resources>
        <local:HotkeyListTemplateSelector x:Key="TemplateSelector">
            <local:HotkeyListTemplateSelector.HotkeyTemplate>
                <DataTemplate>
                    <Grid ColumnSpacing="12" Padding="4,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding FriendlyName}" VerticalAlignment="Center" />
                        <Border Grid.Column="1" CornerRadius="4" Padding="6,2"
                                Visibility="{Binding ProBadgeVisibility}"
                                Background="#3B82F6">
                            <TextBlock Text="PRO" FontSize="10" FontWeight="SemiBold"
                                       Foreground="White" />
                        </Border>
                        <TextBlock Text="{Binding ShortcutDisplay}" Grid.Column="2"
                                   VerticalAlignment="Center" FontFamily="Consolas"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <Button Content="Change" Grid.Column="3" Click="OnChangeClick" Tag="{Binding}"
                                IsEnabled="{Binding IsChangeEnabled}" />
                        <Button Content="Clear" Grid.Column="4" Click="OnClearClick" Tag="{Binding}"
                                IsEnabled="{Binding IsChangeEnabled}" />
                    </Grid>
                </DataTemplate>
            </local:HotkeyListTemplateSelector.HotkeyTemplate>
            <local:HotkeyListTemplateSelector.SeparatorTemplate>
                <DataTemplate>
                    <Border Padding="0,4">
                        <Border BorderThickness="0,0,0,1"
                                BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" />
                    </Border>
                </DataTemplate>
            </local:HotkeyListTemplateSelector.SeparatorTemplate>
        </local:HotkeyListTemplateSelector>
    </Page.Resources>
    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Hotkey Bindings" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,12" />

        <ListView x:Name="HotkeyList" Grid.Row="1"
                  SelectionMode="None" IsItemClickEnabled="False"
                  ItemTemplateSelector="{StaticResource TemplateSelector}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Padding" Value="0,4" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right"
                    Spacing="8" Padding="0,12,0,0">
            <Button Content="Reset to Defaults" Click="OnResetDefaults" />
            <Button x:Name="SaveButton" Content="Save" Style="{StaticResource AccentButtonStyle}"
                    Click="OnSave" IsEnabled="False" />
        </StackPanel>
    </Grid>
</Page>
